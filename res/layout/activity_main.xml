<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ThongTin_MSV"
        android:textColor="#e74c3c"
        android:layout_below="@id/txt_name"
        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/bgr_edittext"
        android:hint="Nhập tên sinh viên"
        android:layout_marginTop="30dp"

        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/txt_name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ThongTin_MSV"
        android:id="@+id/layout_btn"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:background="#2ecc71"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:id="@+id/btn_them"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:background="#e74c3c"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:id="@+id/btn_sua"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Làm Mới"
            android:background="#e67e22"
            android:textColor="@color/white"
            android:id="@+id/btn_lammoi"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_btn"
        android:layout_marginTop="10dp"
        android:id="@+id/lv_sinhVien"/>



</RelativeLayout>